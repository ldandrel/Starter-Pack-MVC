{% extends 'layouts/default.twig' %}

{% block content %}
    {% for post in posts %}
        <div class="container">
            <div class="span8">
                <h1>{{ post.title }}</h1>
                <p>{{ post.article }}</p>
                <div class="clear"></div>
                <hr>
            </div>
        </div>
    {% endfor %}
{% endblock %}